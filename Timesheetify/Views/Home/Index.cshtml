@using Timesheetify.Extensions
@model Timesheetify.Models.Model

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger" role="alert">@Model.Error</div>
}
else if (Model.ShowSuccess)
{
    <div class="alert alert-success" role="alert">
        @(Model.Success ?? "Changes saved.")
    </div>
}

@using (Html.BeginForm())
{
    <div class="main-form-container">
        <div class="main-form" id="main-form">
            <div class="front">
                <h2 class="text-center">Synchronize</h2>
                <div class="form-group">
                    <label class="control-label">User</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="form-group">
                    <label class="control-label">Toggl API token</label>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.ApiKey, new { @class = "form-control", id = "togglKey" })
                    </div>
                </div>

                @if (Model.ApiKey != null)
                {
                    <div class="form-group">
                        <label class="control-label">Workspaces</label>
                        <div class="form-group">
                            @Html.DropDownListFor(m => m.WorkspaceId, Model.Workspace, new { @class = "form-control" })
                        </div>
                    </div>
}

                <div class="form-group">
                    <span>
                        <input type="submit" class="btn btn-primary form-control" style="border-radius: 4px;" formaction="@Url.Action("Save", "Home")" value="Save" />
                    </span>
                </div>

                <div id="main-form-actions">
                    <button class="btn action" data-toggle="modal" data-target="#m2" id="timesheet-to-toggl">
                        <span class="hidden-xs">Timesheet to Toggl</span>
                    </button>
                    <button href="#" class="btn action" data-toggle="modal" data-target="#m1" id="toggl-to-timesheet">
                        <span class="hidden-xs">Toggl to Timesheet</span>
                    </button>
                </div>
            </div>

            <div class="back">
                <div class="synchronizing">
                    <div class="pad">
                        <div class="line line1"></div>
                        <div class="line line2"></div>
                        <div class="line line3"></div>
                        <div class="line line4"></div>
                    </div>
                    <div class="text">
                        Please wait, this may take a while...
                    </div>
                </div>
            </div>
        </div>
    </div>

  <!-- Modal -->
    <div class="modal fade" id="m1" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header modal-border-none">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body modal-custom-body">
                    <h4>Are you sure you want to update?</h4>
                </div>
                <div class="modal-footer modal-border-none modal-custom-footer">
                    <input type="submit" class="btn btn-secondary btn-modal-both" data-dismiss="modal" value="Cancel" />
                    <input type="submit" class="btn btn-primary btn-modal-both" formaction="@Url.Action("UpdateTimesheet", "Home")" value="Confirm" />
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="m2" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header modal-border-none">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body modal-custom-body">
                    <h4>Are you sure you want to update?</h4>
                </div>
                <div class="form-group">
                    <label class="control-label">Week to sync</label>
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.SelectedWeek, Model.Weeks, new { @class = "form-control" })
                    </div>
                </div>
                <div class="modal-footer modal-border-none modal-custom-footer">
                    <input type="submit" class="btn btn-secondary btn-modal-both" data-dismiss="modal" value="Cancel" />
                    <input type="submit" class="btn btn-primary btn-modal-both" formaction="@Url.Action("UpdateToggl", "Home")" value="Confirm" />
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(function () {
        $("button.submit").click(function () {
            $(this).closest("form").submit();

            setTimeout(function () {
                $('.main-form').toggleClass('loading');
            }, 1000);

            $("input, button.action").prop("disabled", "disabled");
        });
    });

    $(document).ready(function () {
        var input = $('#togglKey').val();
        if (jQuery.trim(input).length > 0) {
            $('.main-form').css("height", "650px");
        }
    });
</script>
